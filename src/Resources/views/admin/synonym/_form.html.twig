{# @var resource \Setono\SyliusMeilisearchPlugin\Model\SynonymInterface #}
{{ form_errors(form) }}
<div class="ui two column stackable grid">
    <div class="ten wide column">
        {% set direction = form.direction is defined %}
        <div class="ui {{ direction ? 'three' : 'two' }} fields">
            {{ form_row(form.term) }}
            {% if direction %}
                {{ form_row(form.direction) }}
            {% endif %}
            {{ form_row(form.synonym) }}
        </div>

        <div class="ui two fields">
            {{ form_row(form.locale) }}
            {{ form_row(form.channel) }}
        </div>
    </div>
    <div class="six wide column">{{ 'setono_sylius_meilisearch.ui.synonym_help'|trans|raw }}</div>
</div>
