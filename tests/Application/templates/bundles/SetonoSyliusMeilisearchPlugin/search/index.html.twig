{% extends '@!SetonoSyliusMeilisearchPlugin/search/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        [data-route="setono_sylius_meilisearch_shop_search"] h1 {
            font-size: 3em;
            max-width: 800px;
            margin: 50px auto 120px auto;
            text-align: center;
        }

        /**
         * Filters
         */
        .ssm-filters {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .ssm-filter-header {
            font-size: 14px;
            border-bottom: 1px solid #cacaca;
            padding: 0 0 7px 0;
            margin: 0 0 7px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        button.ssm-filter-reset {
            background: none;
            border: none;
            padding: 0;
            margin: 0;
            cursor: pointer;
            font-size: 14px;
            color: #000;
            outline: none;
        }

        .ssm-filter-header > label {
            text-transform: uppercase;
            font-weight: bold;
            padding: 0 !important;
            margin: 0 !important;
            font-size: 14px !important;
        }

        .ssm-filter ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 7px;
        }

        .ssm-filter li {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .ssm-filter li label {
            cursor: pointer;
            margin: 0 !important;
            padding: 0 !important;
            font-size: 14px !important;
        }

        .ssm-filter-range .ssm-filter-range-widget {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 10px;
        }

        .ssm-filter-range input {
            width: 100%;
            padding: 5px 10px !important;
            border: 1px solid #cacaca;
            border-radius: 5px;
        }

        /**
         * Pagination
         */
        .ssm-pagination ol {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        /**
         * Sort
         */
        .ssm-sort {
            padding: 0 !important;
            margin: 0 !important;
            text-align-last: right;
        }
    </style>
{% endblock %}
